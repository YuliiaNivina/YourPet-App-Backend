            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "avatarURL": {
            "type": "string",
            "description": "User's photo",
            "format": "binary",
            "example": "https://cdn.pixabay.com/photo/2016/03/28/10/05/dog-1285341_1280.jpg"
          },
          "birthday": {
            "type": "string",
            "description": "User's birthday",
            "example": "2023-08-28"
          }    
