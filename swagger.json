  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "description": "User's name",
            "example": "John"
          },
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "Qwerty123"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "User's access token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          },
          "refreshToken": {
            "type": "string",
            "description": "User's refresh token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          },
          "user": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "John"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              }
            }
          }
        }
      },

      "LoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "Qwerty123"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "User's access token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          },
          "refreshToken": {
            "type": "string",
            "description": "User's refresh token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          },
          "user": {
            "type": "object",
            "properties": {
              "avatarURL": {
                "type": "string",
                "description": "User's photo",
                "format": "binary",
                "example": "https://cdn.pixabay.com/photo/2016/03/28/10/05/dog-1285341_1280.jpg"
              },
              "name": {
                "type": "string",
                "description": "User's name",
                "example": "John"
              },
              "email": {
                "type": "string",
                "description": "User's email",
                "format": "email"
              },
              "favorite": {
                "type": "array",
                "items":{
                  "type": "string",
                  "example": ""
                }
              },
              "birthday": {
                "type": "string",
                "description": "User's birthday",
                "example": "2023-08-28"
              },
              "phone": {
                "type": "string",
                "description": "User's birthday",
                "example": "+380000000000"
              },
              "city": {
                "type": "string",
                "description": "User's city of residence",
                "example": "Kiev"
              }
            }
          }
        }
      },

      "RefreshRequest": {
        "type": "object",
        "required": ["refreshToken"],
        "properties": {
          "refreshToken": {
            "type": "string",
            "description": "User's refresh token",
            "example": ""
          }
        }
      },
      "RefreshResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "User's access token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          },
          "refreshToken": {
            "type": "string",
            "description": "User's refresh token",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI"
          }
        }
      },

      "AddPetRequest": {
        "type": "object",
        "required": ["name", "birthday", "type", "photoURL"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Pet's name",
            "example": "Bruno"
          },
          "birthday": {
            "type": "string",
            "description": "Pet's birthday",
            "example": "2023-08-28"
          },
          "type": {
            "type": "string",
            "description": "Pet's type",
            "example": "Spitz"
          },
          "comments": {
            "type": "string",
            "description": "About pet",
            "example": "Something about pet"
          },
          "photoURL": {
            "type": "string",
            "description": "Pet's photo",
            "format": "binary",
            "example": "https://cdn.pixabay.com/photo/2016/03/28/10/05/dog-1285341_1280.jpg"
          }
        }
      },
      "AddPetResponse": {
        "type": "object",
        "properties": {
          "petId": {
            "type": "string",
            "description": "Pet's id",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "description": "Pet's name",
            "example": "Bruno"
          },
          "birthday": {
            "type": "string",
            "description": "Pet's birthday",
            "example": "2023-08-28"
          },
          "type": {
            "type": "string",
            "description": "Pet's breed",
            "example": "Spitz"
          },
          "comments": {
            "type": "string",
            "description": "About pet",
            "example": "Something about pet"
          },
          "photoURL": {
            "type": "string",
            "description": "Pet's photo",
            "format": "binary",
            "example": "https://cdn.pixabay.com/photo/2016/03/28/10/05/dog-1285341_1280.jpg"
          }
        }
      },
      "UserPetsResponse": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "_Id": {
              "type": "string",
              "description": "Pet's id",
              "format": "uuid"
            },
            "name": {
              "type": "string",
              "description": "Pet's name",
              "example": "Bruno"
            },
            "birthday": {
              "type": "string",
              "description": "Pet's birthday",
              "example": "2023-08-28"
            },
            "type": {
              "type": "string",
              "description": "Pet's breed",
              "example": "Spitz"
            },
            "comments": {
              "type": "string",
              "description": "About pet",
              "example": "Something about pet"
            },
            "photoURL": {
              "type": "string",
              "description": "Pet's photo",
              "format": "binary"
            }
          }
        },
        "example": [
          {
            "_Id": "497349tyh",
            "name": "Bruno",
            "birthday": "2023-08-28",
            "type": "Spitz",
            "comments": "Something about pet",
            "photoURL": "https://cdn.pixabay.com/photo/2016/03/28/10/05/dog-1285341_1280.jpg"
          },
